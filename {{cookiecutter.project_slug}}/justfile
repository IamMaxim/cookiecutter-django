alias r := runserver
alias run := runserver
alias m := migrate
alias mm := makemigrations


test:
  pytest {{cookiecutter.project_slug}}

runserver:
  python manage.py runserver localhost:8000

migrate:
  python manage.py migrate

makemigrations +ARGS:
  python manage.py makemigrations {{ARGS}}

ruff:
  ruff check {{cookiecutter.project_slug}}
